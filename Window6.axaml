<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AVi.Window6"
        Title="Plane Class"
		WindowStartupLocation="CenterScreen">
	<Border Background="MidnightBlue" Width="400" Height ="400" CornerRadius="25">
		<Border Background="White" Width="280" Height ="230" CornerRadius="25">
			<StackPanel
				Margin="20"
				HorizontalAlignment="Center"
				>
				<TextBlock
					Text="Класс обслуживания"
					Foreground="Black"
					
					FontWeight="DemiBold"
					FontSize="20"
							/>
				<Button
					Background="MidnightBlue"
					HorizontalAlignment="Center"
					Margin="0 10 0 0"
					Click="Button_Click"
					>
					<TextBlock
						Text="Эконом"
						VerticalAlignment="Center"
						HorizontalAlignment="Center"
						Foreground="White"
						FontWeight="Medium"
						FontSize="15"
					/> 
				</Button>
				<Button
					Background="MidnightBlue"
					HorizontalAlignment="Center"
					Margin="0 10 0 0"
					Click="Button_Click"
					>
					<TextBlock
						Text="Комфорт"
						VerticalAlignment="Center"
						HorizontalAlignment="Center"
						Foreground="White"
						FontWeight="Medium"
						FontSize="15"
					/>
				</Button>
				<Button
					Background="MidnightBlue"
					HorizontalAlignment="Center"
					Margin="0 10 0 0"
					Click="Button_Click"
					>
					<TextBlock
						Text="Бизнес"
						VerticalAlignment="Center"
						HorizontalAlignment="Center"
						Foreground="White"
						FontWeight="Medium"
						FontSize="15"
					/>
				</Button>
				<Button
					Background="MidnightBlue"
					HorizontalAlignment="Center"
					Margin="0 10 0 0"
					Click="Button_Click"
					>
					<TextBlock
						Text="Первый класс"
						VerticalAlignment="Center"
						HorizontalAlignment="Center"
						Foreground="White"
						FontWeight="Medium"
						FontSize="15"
					/>
				</Button>
			</StackPanel>
		</Border>
	</Border>
</Window>

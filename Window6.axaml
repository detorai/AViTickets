					Text="Комфорт"
					Foreground="Black"
					FontWeight="Medium"
					FontSize="15"
					Margin="0 10 0 0"
							/>
				<TextBlock
					Text="Бизнес"
					Foreground="Black"
					FontWeight="Medium"
					FontSize="15"
					Margin="0 10 0 0"
							/>

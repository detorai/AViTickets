<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AVi.Window4"
        Title="Window4"
		WindowStartupLocation="CenterScreen"
		>
	<Border
		  Background="MidnightBlue"
		  Height="500"
		  Width="600"
		  CornerRadius="25"
		>
		<StackPanel
			Background="LightGray"
			Height="450"
			Width="500"
			>
				<StackPanel
				Margin="5 10"
				Orientation="Horizontal">
					<Button
						Background="LightGray"
						VerticalAlignment="Top"
						HorizontalAlignment="Right"
						Click="Button_Click"
						>
						<TextBlock
						Text="←Назад"
						Foreground="Black"
						FontSize="12"
						/>
					</Button>
				</StackPanel>
			<Border
				CornerRadius="25"
				Background="White"
				Width="400"
				Height="120"
				BorderBrush="Black"
				BorderThickness="0.6"
				>
				<Grid
					ColumnDefinitions="100 *"
					RowDefinitions="*  *"
					ShowGridLines="True"
					>
					<Button
						Grid.Column="0"
						Grid.Row="1"
						Background="Chocolate"
						VerticalAlignment="Center"
						HorizontalAlignment="Center"
						Width="85"
						Height="30"
						CornerRadius="5"
						Click ="Button_Click_1"
						>
						<TextBlock
							VerticalAlignment="Center"
							HorizontalAlignment="Center"
							Foreground="White"
							Text="Выбрать"
							/>
					</Button>
					<TextBlock
						Grid.Column="0"
						Grid.Row="0"
						Text="5432₽"
						VerticalAlignment="Center"
						HorizontalAlignment="Center"
						FontWeight="Bold"
						/>
					<TextBlock
						Grid.Column="1"
						Grid.Row="0"
						Text="Победа"
						VerticalAlignment="Center"
						HorizontalAlignment="Left"
						FontWeight="Bold"
						Margin="10 4"
						/>
					<StackPanel
						Grid.Column="1"
						Grid.Row="1"
						HorizontalAlignment="Left"
						Margin="5">
						<TextBlock
							Text="8:10"
							Foreground="Black"
							FontWeight="DemiBold"
							FontSize="18"
							/>
						<TextBlock
							Text="Санкт-Петербург"
							Foreground="Black"
							FontSize="12"
							/>
						<TextBlock
							Text="30 сен, ср"
							Foreground="Black"
							FontSize="12"
								/>
					</StackPanel>
					<StackPanel
						Grid.Column="1"
						Grid.Row="1"
						HorizontalAlignment="Right"
						Margin="10 4">
						<TextBlock
							Text="8:10"
							Foreground="Black"
							FontWeight="DemiBold"
							FontSize="18"
							HorizontalAlignment="Right"
							/>
						<TextBlock
							Text="Санкт-Петербург"
							Foreground="Black"
							FontSize="12"
							HorizontalAlignment="Right"
							/>
						<TextBlock
							Text="30 сен, ср"
							Foreground="Black"
							FontSize="12"
							HorizontalAlignment="Right"
								/>
					</StackPanel>
				</Grid>
				
			</Border>
			</StackPanel>
		</Border>
</Window>

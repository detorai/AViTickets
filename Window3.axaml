<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AVi.Window3"
        Title="Window3"
		WindowStartupLocation="CenterScreen">
	<Border
		Background="MidnightBlue"
		Height="500"
		Width="400"
		CornerRadius="25"
		>
		<StackPanel
			Background="LightGray"
			Height="500"
			Width="350"
			>
			<StackPanel
				Margin="5 10"
				Orientation="Horizontal"
				>
				<Button
					Background="LightGray"
					VerticalAlignment="Top"
					HorizontalAlignment="Right"
					Click ="Button_Click"
					>
					<TextBlock
					Text="←Назад"
					Foreground="Black"
					FontSize="12"
					/>
				</Button>
			</StackPanel>
			<StackPanel>
				<Border
					CornerRadius="25"
					Background="White"
					Height="200"
					Width="300"
					>
					<StackPanel
						Orientation="Vertical"
						Margin="15"
						>
						<TextBlock
							Text="Условия тарифа"
							Foreground="Black"
							FontWeight="DemiBold"
							FontSize="15"
							/>
						<TextBlock
							Text="Ручная кладь"
							Foreground="Black"
							FontSize="12"
							Margin="0 15 0 0"
							/>
						<TextBlock
							Text="Без багажа"
							Foreground="Black"
							FontSize="12"
							Margin="0 10 0 0"
							/>
						<TextBlock
							Text="Обмен платный"
							Foreground="Black"
							FontSize="12"
							Margin="0 10 0 0"
							/>
						<TextBlock
							Text="Без возврата"
							Foreground="Black"
							FontSize="12"
							Margin="0 10 0 0"
							/>
						<Button
							Background="MidnightBlue"
							CornerRadius="15 15"
							Width="270"
							Height="40"
							Margin="0 10 0 0"
							HorizontalContentAlignment="Center"
							VerticalContentAlignment="Center"
							>
							<TextBlock
							Text="Изменить"
							Foreground="White"
							FontWeight="DemiBold"
							FontSize="13"
							/>
						</Button>
					</StackPanel>
				</Border>
				<TextBlock
					Text="Санкт-Петербург - Калининград"
					Foreground="Black"
					FontWeight="DemiBold"
					FontSize="15"
					Margin="25 15 0 5"
					/>
				<Border
					CornerRadius="25"
					Background="White"
					Height="130"
					Width="300"
					>
					<StackPanel
						Orientation="Vertical"
						Margin="15"
						>
						<TextBlock
							Text="Авиокампания - Победа"
							Foreground="Black"
							FontWeight="DemiBold"
							FontSize="15"
							/>
						<StackPanel 
							Orientation="Horizontal" 
							Margin="0 10 0 0">
							<TextBlock
								Text="8:10"
								Foreground="Black"
								FontSize="12"
								
								/>
							<TextBlock
								Text="Санкт-Петербург"
								Foreground="Black"
								FontSize="12"
								Margin="50 0 0 0"
								/>
						</StackPanel>
						<StackPanel Orientation="Horizontal">
							<TextBlock
								Text="24 сен, ср"
								Foreground="Gray"
								FontSize="12"
								Margin="0 2 0 0"
								/>
							<TextBlock
								Text="Пулково"
								Foreground="Gray"
								FontSize="12"
								Margin="14 0 0 0"
								/>
						</StackPanel >
						<StackPanel
							Orientation="Horizontal"
							Margin="0 10 0 0">
							<TextBlock
								Text="9:05"
								Foreground="Black"
								FontSize="12"
								/>
							<TextBlock
								Text="Калининград"
								Foreground="Black"
								FontSize="12"
								Margin="50 0 0 0"
								/>
						</StackPanel>
						<StackPanel Orientation="Horizontal">
							<TextBlock
								Text="24 сен, ср"
								Foreground="Gray"
								FontSize="12"
								Margin="0 2 0 0"
								/>
							<TextBlock
								Text="Храброво"
								Foreground="Gray"
								FontSize="12"
								Margin="16 0 0 0"
								/>
						</StackPanel >
						
					</StackPanel>
				</Border>
			</StackPanel>
				<Button
					Background="MidnightBlue"
					CornerRadius="15 15"
					Width="300"	
					Height="40"
					Margin="25 15 0 0"
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center"
					>				
						<TextBlock
						Text="Забронировать"
						Foreground="White"
						FontWeight="DemiBold"
						FontSize="13"/>
				</Button>
		</StackPanel>
	</Border>
</Window>

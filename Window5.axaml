<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AVi.Window5"
        Title="Window5"
		WindowStartupLocation="CenterScreen">
	<Border Background="MidnightBlue" Width="300" Height ="200" CornerRadius="25">
		<Border Background="White" Width="200" Height ="150" CornerRadius="25">
			<StackPanel 
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Margin="20">
				<Button
					Width="160"
					Height="30"
					CornerRadius="10 10 0 0"
					Background="MidnightBlue"
					>
					<TextBlock
						Text="Мои бронирования"
						Foreground="White"
						FontWeight="DemiBold"
						HorizontalAlignment="Center"
						/>
				</Button>
				<Button
					Width="160"
					Height="30"
					Background="MidnightBlue"
					>
					<TextBlock
						Text="Мои документы"
						Foreground="White"
						FontWeight="DemiBold"
						HorizontalAlignment="Center"
						/>
				</Button>
				<Button
					Width="160"
					Height="30"
					CornerRadius="0 0 10 10">
					<TextBlock
						Text="Выйти"
						Foreground="Black"
						FontWeight="DemiBold"
						HorizontalAlignment="Center"
						/>
				</Button>
			</StackPanel>
		</Border>
	</Border>
</Window>
